<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intern.plb6">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PLB6App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PLB6"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".ui.history.HistoryActivity"
            android:exported="true" />
        <activity
            android:name=".ui.vnpay.PaymentActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ticket.TicketActivity"
            android:exported="true" />
        <activity
            android:name=".ui.reservation.ReservationActivity"
            android:exported="true" />
        <activity
            android:name=".ui.detailfilm.DetailFilmActivity"
            android:exported="true" />
        <activity
            android:name=".ui.home.view.HomeActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>